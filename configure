#!/bin/bash

dn="$(dirname "$(realpath "$0")")"

cd "$dn"

python3 -m venv pyenv

source pyenv/bin/activate

python3 -m pip install pipenv

deactivate

sudo chmod +x ./__pipenv
sudo chmod +x ./__python
sudo chmod +x ./opkvs

./__pipenv install

sudo rm -f /usr/local/bin/opkvs
sudo ln -s "$dn/opkvs" /usr/local/bin/opkvs